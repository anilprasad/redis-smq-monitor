{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "strict": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["node_modules", "dist", "**/*spec.ts", "examples", "src/client"]
}
